<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HexaIcon">
        <item name="borderColor">@color/border</item>
        <item name="borderSize">0</item>
    </style>

    <style name="HexaIcon.Large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <!-- magic number; depend on quide lines from activity_menu layout -->
        <item name="layout_constraintWidth_percent">0.32</item>
    </style>

    <style name="HexaIcon.Small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <!-- magic number; depend on quide lines from activity_menu layout -->
        <item name="layout_constraintWidth_percent">0.21</item>
    </style>

    <style name="HexaIcon.XGuide">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="HexaIcon.YGuide">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
