<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#00BCD4"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_solid_circle"
        android:gravity="center"
        android:padding="100dp"
        android:text="@string/sync_dialog_message"
        android:textAppearance="@style/TextAppearance.Large"
        app:autoSizeTextType="uniform"
        app:backgroundTint="#B7009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sync_dialog_continue_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_solid_circle"
        android:gravity="center"
        android:padding="32dp"
        android:text="@string/sync_dialog_negative"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Large"
        app:autoSizeTextType="uniform"
        app:backgroundTint="#92673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/sync_dialog_abort_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_solid_circle"
        android:gravity="center"
        android:padding="32dp"
        android:text="@string/sync_dialog_positive"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Large"
        app:autoSizeTextType="uniform"
        app:backgroundTint="#DD4367"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
</merge>