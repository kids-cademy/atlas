<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4">

    <TextView
        android:id="@+id/help_overview_p1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/help_overview_p1"
        android:textAppearance="@style/TextAppearance.Medium.Accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/help_overview_p2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/help_overview_p2"
        android:textAppearance="@style/TextAppearance.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_overview_p1" />

    <TextView
        android:id="@+id/help_overview_p3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/help_overview_p3"
        android:textAppearance="@style/TextAppearance.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_overview_p2" />

    <TextView
        android:id="@+id/help_overview_p4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/help_overview_p4"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintBottom_toTopOf="@+id/help_overview_p5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_overview_p3"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/help_overview_p5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/help_overview_p5"
        android:textAppearance="@style/TextAppearance.Small.Accent"
        app:layout_constraintBottom_toTopOf="@+id/help_overview_p6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_overview_p4"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/help_overview_p6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/help_overview_p6"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_overview_p5"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/help_overview_p7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/help_overview_p7"
        android:textAppearance="@style/TextAppearance.Small.Inverse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/help_overview_p6"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/help_overview_p8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/help_overview_p8"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/help_overview_p4"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/help_overview_p9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/help_overview_p9"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/help_overview_p5"
        app:layout_constraintWidth_percent="0.4" />

</android.support.constraint.ConstraintLayout>