<?xml version="1.0" encoding="utf-8"?>
<com.kidscademy.atlas.view.FeatureItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/divider_weight"
    android:minHeight="56dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_feature_name"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#401565C0"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Medium"
        tools:text="Conservation" />

    <TextView
        android:id="@+id/item_feature_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40C62828"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAppearance="@style/TextAppearance.Small"
        tools:text="Least Concern" />

</com.kidscademy.atlas.view.FeatureItemView>
