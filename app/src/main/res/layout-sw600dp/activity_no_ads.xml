<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80E91E63">

    <com.kidscademy.atlas.view.PageHeader
        layout="@layout/compo_page_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pageCaption="@string/no_ads_caption" />

    <include
        android:id="@+id/include"
        layout="@layout/compo_no_ads"
        android:layout_width="@dimen/trademark_icon_size"
        android:layout_height="@dimen/trademark_icon_size"
        android:layout_marginTop="@dimen/trademark_icon_page_header_offset"
        android:layout_marginEnd="@dimen/trademark_icon_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/no_ads_left_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/no_ads_right_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:id="@+id/no_ads_h1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/no_ads_h1"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Medium.Accent"
        app:layout_constraintStart_toStartOf="@+id/no_ads_left_guide"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/no_has_p1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/no_ads_p1"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintEnd_toEndOf="@+id/no_ads_h1"
        app:layout_constraintStart_toStartOf="@+id/no_ads_h1"
        app:layout_constraintTop_toBottomOf="@+id/no_ads_h1" />

    <TextView
        android:id="@+id/no_ads_h2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:text="@string/no_ads_h2"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Medium.Accent"
        app:layout_constraintStart_toStartOf="@+id/no_ads_left_guide"
        app:layout_constraintTop_toBottomOf="@+id/no_has_p1"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="@string/no_ads_p2"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintEnd_toEndOf="@+id/no_ads_h2"
        app:layout_constraintStart_toStartOf="@+id/no_ads_h2"
        app:layout_constraintTop_toBottomOf="@+id/no_ads_h2"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/no_ads_h3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/no_ads_h3"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Medium.Accent"
        app:layout_constraintStart_toStartOf="@+id/no_ads_left_guide"
        app:layout_constraintTop_toTopOf="@+id/no_ads_h6"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/no_ads_p3"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintEnd_toEndOf="@+id/no_ads_h3"
        app:layout_constraintStart_toStartOf="@+id/no_ads_h3"
        app:layout_constraintTop_toBottomOf="@+id/no_ads_h3"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/no_ads_h4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/no_ads_h4"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Medium.Accent"
        app:layout_constraintEnd_toStartOf="@+id/no_ads_right_guide"
        app:layout_constraintTop_toTopOf="@+id/no_ads_h1"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="@string/no_ads_p4"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintEnd_toEndOf="@+id/no_ads_h4"
        app:layout_constraintStart_toStartOf="@+id/no_ads_h4"
        app:layout_constraintTop_toBottomOf="@+id/no_ads_h4" />

    <TextView
        android:id="@+id/no_ads_h5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_ads_h5"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Medium.Accent"
        app:layout_constraintEnd_toStartOf="@+id/no_ads_right_guide"
        app:layout_constraintTop_toTopOf="@+id/no_ads_h2"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/no_ads_p5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/no_ads_p5"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintEnd_toEndOf="@+id/no_ads_h5"
        app:layout_constraintStart_toStartOf="@+id/no_ads_h5"
        app:layout_constraintTop_toBottomOf="@+id/no_ads_h5"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/no_ads_h6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:text="@string/no_ads_h6"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Medium.Accent"
        app:layout_constraintEnd_toStartOf="@+id/no_ads_right_guide"
        app:layout_constraintTop_toBottomOf="@+id/no_ads_p5"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="@string/no_ads_p6"
        android:textAppearance="@style/TextAppearance.Small"
        app:layout_constraintEnd_toEndOf="@+id/no_ads_h6"
        app:layout_constraintStart_toStartOf="@+id/no_ads_h6"
        app:layout_constraintTop_toBottomOf="@+id/no_ads_h6"
        app:layout_constraintWidth_percent="0.4" />

</android.support.constraint.ConstraintLayout>