<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="reader_intro_bg_classic">
        <item name="android:background">@drawable/shape_cover_page_bg_classic</item>
    </style>

    <style name="reader_intro_bg_modern">
        <item name="android:background">@drawable/shape_cover_page_bg_modern</item>
    </style>

    <style name="reader_intro_large_shape_classic">
        <item name="android:alpha">0.3</item>
    </style>

    <style name="reader_intro_large_shape_modern">
        <item name="android:alpha">0</item>
    </style>

    <style name="reader_intro_small_shape_classic">
        <item name="srcCompat">@drawable/shape_solid_circle</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="layout_constraintEnd_toEndOf">@id/reader_intro_bg</item>
        <item name="layout_constraintDimensionRatio">1</item>
        <item name="layout_constraintHeight_percent">0.16</item>
    </style>

    <style name="reader_intro_small_shape_modern">
        <item name="srcCompat">@drawable/shape_solid_square</item>
        <item name="android:layout_marginStart">150dp</item>
        <item name="layout_constraintStart_toStartOf">@id/reader_intro_bg</item>
        <item name="layout_constraintDimensionRatio">2</item>
        <item name="layout_constraintHeight_percent">0.2</item>
    </style>

    <style name="reader_intro_image_classic">
        <item name="android:layout_marginStart">32dp</item>
        <item name="layout_constraintHeight_percent">0.45</item>
    </style>

    <style name="reader_intro_image_modern">
        <item name="android:layout_marginStart">0dp</item>
        <item name="layout_constraintHeight_percent">0.6</item>
    </style>

    <style name="reader_infobox_shape_classic">
        <item name="srcCompat">@drawable/shape_solid_circle</item>
    </style>

    <style name="reader_infobox_shape_modern">
        <item name="srcCompat">@drawable/shape_solid_square</item>
    </style>

    <style name="reader_featured_image_classic">
        <item name="layout_constraintDimensionRatio">1</item>
        <item name="layout_constraintHeight_percent">0.6</item>
        <item name="layout_constraintVertical_bias">0.1</item>
    </style>

    <style name="reader_featured_image_modern">
        <item name="layout_constraintDimensionRatio">1.33</item>
        <item name="layout_constraintHeight_percent">0.6</item>
        <item name="layout_constraintVertical_bias">0.25</item>
    </style>

    <style name="reader_item_fact_bullet_classic">
        <item name="srcCompat">@drawable/facts_bullet_circle</item>
    </style>

    <style name="reader_item_fact_bullet_modern">
        <item name="srcCompat">@drawable/facts_bullet_square</item>
    </style>

    <style name="reader_contextual_shape_classic">
        <item name="srcCompat">@drawable/shape_solid_circle</item>
    </style>

    <style name="reader_contextual_shape_modern">
        <item name="srcCompat">@drawable/shape_solid_square</item>
    </style>
</resources>
